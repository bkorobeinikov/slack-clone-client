{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../dist",
        "rootDir": ".",

        "target": "es5",
        "moduleResolution": "node",
        "module": "esnext",

        "lib": ["dom", "es5", "scripthost"],

        "skipLibCheck": true,

        "jsx": "react",

        "baseUrl": ".",
        "paths": {
            "@app/store": ["core/src/store"],
            "@app/store/*": ["core/src/store/*"],
            "@app/ui/*": ["core/src/ui/*"],
            "@app/*": ["app/src/*"]
        }
    },
    "include": ["./**/*.tsx", "./**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
